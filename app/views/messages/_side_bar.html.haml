.Chat-side
  .side-header
    .side-header__box
      %p.side-header__box__username
        = current_user.name
      %ul.side-header__box__icons
        %li.side-header__box__edit
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.sdie-header__box__new
          =link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .groups__group__name
            = group.name
          .groups__group__message
            = group.show_last_message
